@{
	Layout = @Model.LayoutFullFileName;
}

<table align="center" role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="margin: auto;">
	<tr>
		<td valign="middle" class="hero bg_white" style="padding: 2em 0 2em 0;">
			<table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%">
				<tr>
					<td style="padding: 0 2.5em; text-align: left;">
						<div class="text">
							<h2>
								Ciao @Model.FirstName,
							</h2>
							<p>abbiamo ricevuto una richiesta di ripristino della password per il tuo account</p>
							<h2>
								<strong>@Model.RecoveryPasswordCode</strong>
							</h2>
							<p>inserisci questo codice nell'apposita pagina per completare il ripristino</p>
							<p>oppure <a href="@Model.Callbackurl">clicca qui</a></p>

							<p>
								Non sei stato tu? Assicurati di cambiare subito la tua password.
							</p>

							<p>
								In caso di bisongo ti invitiamo a contattare il nostro servizio <a href="mailto:@Model.EMailSupport">Assistenza</a>
							</p>
						</div>
					</td>
				</tr>
			</table>
		</td>
	</tr>
</table>